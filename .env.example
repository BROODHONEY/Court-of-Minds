# Court of Minds - Environment Configuration
# Copy this file to .env and fill in your values
# See docs/configuration.md for detailed documentation

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Options: development, staging, production, test
NODE_ENV=development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
HOST=0.0.0.0

# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=court_of_minds
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Enable SSL for database connection (recommended for production)
DB_SSL=false

# =============================================================================
# MODEL PROVIDER API KEYS
# =============================================================================
# At least one provider must be configured
# API keys should be kept secure and never committed to version control

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_ORGANIZATION=your_org_id_here
# OPENAI_MODELS=gpt-4,gpt-3.5-turbo

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODELS=claude-3-opus-20240229,claude-3-sonnet-20240229

# Google AI
GOOGLE_API_KEY=your_google_api_key_here
# GOOGLE_MODELS=gemini-pro

# Groq API
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODELS=llama-3.1-70b-versatile,mixtral-8x7b-32768

# Hugging Face API
HUGGINGFACE_API_KEY=your_hf_api_key_here
HUGGINGFACE_MODELS=meta-llama/Llama-2-70b-chat-hf,mistralai/Mixtral-8x7B-Instruct-v0.1

# =============================================================================
# MODEL BEHAVIOR CONFIGURATION
# =============================================================================
# Timeout for individual model responses (seconds)
MODEL_TIMEOUT=30

# Maximum tokens per model response
MODEL_MAX_TOKENS=2000

# Model temperature (0.0 - 2.0)
MODEL_TEMPERATURE=0.7

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Session retention period (days)
SESSION_RETENTION_DAYS=30

# =============================================================================
# DELIBERATION CONFIGURATION
# =============================================================================
# Minimum debate rounds (1-10)
MIN_DEBATE_ROUNDS=1

# Maximum debate rounds (1-10)
MAX_DEBATE_ROUNDS=5

# Overall session timeout (milliseconds)
SESSION_TIMEOUT=300000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable authentication (true/false)
ENABLE_AUTH=false

# Admin API key for model management endpoints
# IMPORTANT: Must be at least 32 characters for production
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ADMIN_API_KEY=your_admin_api_key_here_min_32_chars

# JWT secret for token signing (required if ENABLE_AUTH=true)
# IMPORTANT: Must be at least 32 characters for production
# JWT_SECRET=your_jwt_secret_here_min_32_chars

# JWT expiration time (e.g., "8h", "1d", "7d")
# JWT_EXPIRES_IN=8h

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=text

# =============================================================================
# ADVANCED CONFIGURATION (Optional)
# =============================================================================
# These settings use sensible defaults and typically don't need to be changed

# Master password for credential encryption (optional)
# MASTER_PASSWORD=your_secure_master_password_here

# Rate limiting
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=30
